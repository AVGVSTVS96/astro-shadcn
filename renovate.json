{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticCommitType(chore)",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:definitelyTyped",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "packageRules": [
    {
      "groupName": "Prettier",
      "matchPackagePatterns": ["^prettier", "prettier-plugin-astro", "prettier-plugin-tailwindcss"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Tailwind",
      "matchPackagePatterns": ["tailwind", "clsx", "class-variance-authority"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Components",
      "matchPackagePatterns": ["@radix-ui", "cmdk"],
      "matchUpdateTypes": ["minor", "patch"]
    },
    {
      "groupName": "Astro",
      "matchPackagePatterns": ["^astro", "@astrojs"],
      "matchUpdateTypes": ["minor", "patch"]
    }
  ]
}
