{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticCommitType(chore)",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:definitelyTyped",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "prHourlyLimit": 10,
  "prConcurrentLimit": 10,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "Prettier",
      "matchPackagePatterns": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"]
    }
  ]
}
