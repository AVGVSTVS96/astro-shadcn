{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":dependencyDashboard",
    ":semanticCommitType(chore)",
    ":ignoreModulesAndTests",
    "group:monorepos",
    "group:definitelyTyped",
    "group:recommended",
    "replacements:all",
    "workarounds:all"
  ],
  "prHourlyLimit": 20,
  "prConcurrentLimit": 20,
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "groupName": "Prettier",
      "matchPackagePatterns": ["^prettier"],
      "commitMessageSuffix": "dependencies"
    },
    {
      "groupName": "Components, icons, and animation utilities",
      "matchPackagePatterns": ["@radix-ui/*", "cmdk", "lucide-react", "framer-motion"]
    },
    {
      "groupName": "TailwindCSS",
      "matchPackagePatterns": ["^tailwind", "clsx", "class-variance-authority"]
    },
    {
      "extends": ["monorepo:astro"],
      "matchPackagePatterns": ["^@astrojs"]
    }
  ]
}
