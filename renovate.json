{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "prHourlyLimit": 6,
  "packageRules": [
    {
      "groupName": "Astro Adapters and Integrations",
      "matchPackagePatterns": ["^@astrojs/"],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessageAction": "Update",
      "commitMessageTopic": "Astro Adapters and Integrations",
      "commitMessageExtra": "{{length upgrades}} dependencies in Astro Adapters and Integrations group"
    },
    {
      "groupName": "Radix",
      "matchPackagePatterns": ["^@radix-ui/"],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessageAction": "Update",
      "commitMessageTopic": "Radix",
      "commitMessageExtra": "{{length upgrades}} dependencies in Radix group"
    },
    {
      "groupName": "Types",
      "matchPackagePatterns": ["^@types/"],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessageAction": "Update",
      "commitMessageTopic": "Types",
      "commitMessageExtra": "{{length upgrades}} dependencies in Types group"
    },
    {
      "groupName": "Prettier",
      "matchPackagePatterns": ["prettier"],
      "matchUpdateTypes": ["minor", "patch"],
      "commitMessageAction": "Update",
      "commitMessageTopic": "Prettier",
      "commitMessageExtra": "{{length upgrades}} dependencies in Prettier group"
    }
  ]
}
